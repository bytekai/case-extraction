{
  "name": "Legal Case Extraction",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "prisma.prisma"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        }
      }
    }
  },
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "notify"
    }
  },
  "postCreateCommand": "cp .env.example .env 2>/dev/null || true && pnpm install && pnpm prisma:generate",
  "postStartCommand": "pnpm prisma:migrate:dev --name init || true",
  "remoteUser": "node"
}
